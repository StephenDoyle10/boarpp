<!DOCTYPE html>
<html>

<%- include('layouts/header'); -%>
<body>
<%- include('layouts/navbar'); -%>





<div class="container-fluid">
		<div class="row no-gutters justify-content-center">
			<div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
				



				
				
				<div class="standard-box">
					<div class="meta"><a href="/user/<%=blogpost.userid._id%>" class="usern"><%=blogpost.userid.username%></a></div>
					<div class="date"><%=blogpost.datePosted.toDateString()%></div>
					<div class="postBody"><a href="/post/<%=blogpost._id%>">
						<%-blogpost.body %>
					</a></div>
					<% if(blogpost.image){ %>
<img src="<%=blogpost.image%>">
					


					<%} else {%>
				
				
					<%} %>



					<% if(blogpost.userid._id==useridnumber){ %>
				<div>
					<span class="editButton">Edit</span>
					<span class="deleteButton1">Delete</span>
				</div>

				<div class="editModal">
				  <div class="modalContentStyle">
				      <div class="close1">&times;</div>
				        <form action="/posts/reply" method="POST">
									<textarea id="summernoteEdit" name="body"><%-blogpost.body %></textarea>
					<script>
						$('#summernoteEdit').summernote({
        
        tabsize: 2,
        height: 100,
        toolbar: [
            [ 'style', [ 'style' ] ],
            [ 'font', [ 'bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear'] ],
            [ 'fontname', [ 'fontname' ] ],
            [ 'fontsize', [ 'fontsize' ] ],
            [ 'color', [ 'color' ] ],
            [ 'para', [ 'ol', 'ul', 'paragraph', 'height' ] ],
            [ 'table', [ 'table' ] ],
            [ 'insert', [ 'link'] ],
            [ 'view', [ 'undo', 'redo', 'fullscreen', 'codeview', 'help' ] ]
        ]
      });
					</script>
									<button type="submit" class="postbutton" id="sendMessageButton" name="edit_post" value="<%=blogpost._id%>">Confirm</button>
						</form>
				    
				  	</div>
				</div>

				<div class="deleteModal">
				  <div class="modalContentStyle">
				      <div class="close2">&times;</div>
				        <p>Are you sure you want to delete this post?</p>
				        <div>
				        			
								<span class="cancelButton">Cancel</span>
								<form class="deleteForm" action="/posts/delete" method="post">
									<button type="submit" class="deleteButton2" name="delete_post" value="<%=blogpost._id%>">Delete</button>
								</form>
						</div>
					</div>
				</div>


				

			
					<%} else {%>


					<div>
					<span class="replyButton">Reply</span>
					
				</div>

				<div class="replyModal">
				  <div class="modalContentStyle">
				      <div class="close3">&times;</div>
				        <form action="/posts/reply" method="POST">
							<textarea id="summernoteReply" name="reply"></textarea>
							<script>
								$('#summernoteReply').summernote({
		        
								        tabsize: 2,
								        height: 100,
								        toolbar: [
								            [ 'style', [ 'style' ] ],
								            [ 'font', [ 'bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear'] ],
								            [ 'fontname', [ 'fontname' ] ],
								            [ 'fontsize', [ 'fontsize' ] ],
								            [ 'color', [ 'color' ] ],
								            [ 'para', [ 'ol', 'ul', 'paragraph', 'height' ] ],
								            [ 'table', [ 'table' ] ],
								            [ 'insert', [ 'link'] ],
								            [ 'view', [ 'undo', 'redo', 'fullscreen', 'codeview', 'help' ] ]
								        ]
								      });
							</script>
							<button type="submit" class="postbutton" id="sendMessageButton" name="postid" value="<%=blogpost._id%>">Confirm</button>
							<input type="hidden" name="username" value="<%=loggedInUser%>">
						</form>
				  	</div>
				</div>

				
					<%}

					for(var j=0;j<=replies.length-1;j++){
					if(blogpost._id.equals(replies[j].postid)){%>

				<div class="reply-box">
					<div class="usern"><%=replies[j].username%></div>
					<div class="date"><%=replies[j].datePosted.toDateString()%></div>
					<div class="postBody">
						<%-replies[j].reply %>
					</div>
				</div>

				<%} else{} }%>

			</div>

		</div>
	</div>
</div>




<%- include('layouts/scripts'); -%>
</body>

</html>
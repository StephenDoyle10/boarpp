<!DOCTYPE html>
<html>

<%- include('layouts/header'); -%>
<body>
<%- include('layouts/navbar'); -%>




<div class="container">
	<div class="row">
		<div class="col-lg-8 col-md-10 mx-auto">
			<div class="standard-box">
				<div class="meta"><a href="/user/<%=blogpost.userid._id%>" class="usern"><%=blogpost.userid.username%></a></div>
				
				<div class="date"><%=blogpost.datePosted.toDateString()%></div>
				
				<a href="/post/<%=blogpost._id%>">
					<p class="post-subtitle"><%-blogpost.body %></p>
				</a>
				<img src="<%=blogpost.image%>">
		
<% if(blogpost.userid._id==useridnumber){ %>
				<div>
					<span class="editButton">Edit</span>
					<span class="deleteButton1">Delete</span>
				</div>

				<div class="editModal">
				  	<div class="modalContentStyle">
				      	<div class="close1">&times;</div>
				        <form action="/posts/edit" method="POST">
									<textarea id="summernoteEdit" name="body"><%-blogpost.body %></textarea>
									<script>
										$('#summernoteEdit').summernote({
				        					tabsize: 2,
										    height: 100,
										    toolbar: [
										        [ 'style', [ 'style' ] ],
										        [ 'font', [ 'bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear'] ],
										        [ 'fontname', [ 'fontname' ] ],
										        [ 'fontsize', [ 'fontsize' ] ],
										        [ 'color', [ 'color' ] ],
										        ['para', [ 'ol', 'ul', 'paragraph', 'height' ] ],
										        [ 'table', [ 'table' ] ],
										        [ 'insert', [ 'link'] ],
										        [ 'view', [ 'undo', 'redo', 'fullscreen', 'codeview', 'help' ] ]
										        ]
										    });
									</script>
									<button type="submit" class="postbutton" id="sendMessageButton" name="edit_post" value="<%=blogpost._id%>">Confirm</button>
						</form>
					</div>
				</div>

				<div class="deleteModal">
				  <div class="modalContentStyle">
					    <div class="close2">&times;</div>
					    <p>Are you sure you want to delete this post?</p>
					    <div>
					        			
							<span class="cancelButton">Cancel</span>
							<form class="deleteForm" action="/posts/delete" method="post">
								<button type="submit" class="deleteButton2" name="delete_post" value="<%=blogpost._id%>">Delete</button>
							</form>
						</div>
					</div>
				</div>
			<%} 
			else {%>
			
			
				<%} %>
						 
			
			</div>				
		</div>
	</div>
</div>



<%- include('layouts/scripts'); -%>
</body>

</html>